<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.diseo.hola.Main3Activity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main3" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_menu_plus" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.herprogramacion.botones.ActividadBotones">

        <ImageSwitcher
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageSwitcher"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="4dp"
            android:layout_height="3dp"
            android:background="#d8d8d8"
            android:id="@+id/layout3"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="false"
            android:layout_marginBottom="185dp"
            android:layout_above="@+id/imageSwitcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="@string/visor"
            android:textColor="#C70000"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24dp"
            android:longClickable="true"
            android:typeface="sans"
            android:textStyle="italic"
            android:id="@+id/textView6"
            android:textAlignment="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/layout3"
            android:layout_above="@+id/layout3" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:maxLength="30"
            android:lines="1"
            android:layout_alignTop="@+id/layout3"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:hint="Buscar"
            android:backgroundTint="@android:color/darker_gray"
            />


        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton"
            android:src="@drawable/ic_search_menu"
            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/layout3"
            android:layout_alignRight="@+id/editText2"
            android:layout_alignEnd="@+id/editText2"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/imageView5"
            android:src="@drawable/visor_01"
            android:layout_marginBottom="54dp"
            android:layout_above="@+id/imageView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/imageView6"
            android:layout_alignEnd="@+id/imageView6"
            android:layout_below="@+id/editText2" />

        <Spinner
            android:id="@+id/spclientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/clientes"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#615D5B"            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/imageView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/visor_55"
            android:layout_toStartOf="@+id/spflotillas"
            android:layout_below="@+id/spflotillas"
            android:layout_marginTop="6dp" />
        <Spinner
            android:id="@+id/spflotillas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/flotillas"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2"
            android:layout_marginBottom="-35dp"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/imageView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"            android:src="@drawable/visor_03"
            android:layout_above="@+id/imageSwitcher"
            android:layout_alignRight="@+id/imageView5"
            android:layout_alignEnd="@+id/imageView5"
            android:layout_marginBottom="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unidad 1"
            android:id="@+id/textView7"
            android:layout_alignBottom="@+id/imageView7"
            android:layout_alignLeft="@+id/spflotillas"
            android:layout_alignStart="@+id/spflotillas"
            android:layout_marginBottom="7dp"
           android:textColor="#615D5B"
            android:layout_marginLeft="7dp"
            android:textSize="15dp"
            android:textIsSelectable="true" />
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-5dp" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="4dp"
            android:layout_height="3dp"
            android:background="#d8d8d8"
            android:id="@+id/layout5"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="false"
            android:layout_marginBottom="-40dp"
            android:layout_above="@+id/imageSwitcher" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/imageView81"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/visor_03"
            android:layout_above="@+id/imageSwitcher"
            android:layout_alignRight="@+id/imageView5"
            android:layout_alignEnd="@+id/imageView5"
            android:layout_marginBottom="-25dp" />
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="45dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unidad 2"
            android:id="@+id/textView81"
            android:layout_alignBottom="@+id/imageView81"
            android:layout_alignLeft="@+id/spflotillas"
            android:layout_alignStart="@+id/spflotillas"
            android:layout_marginBottom="2dp"
            android:textColor="#615D5B"
            android:layout_marginLeft="7dp"
            android:textSize="15dp"
            android:textIsSelectable="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/imageView9"
            android:src="@drawable/visor_08"
            android:layout_marginTop="14dp"
            android:layout_alignTop="@+id/layout5"
            android:layout_toLeftOf="@+id/spflotillas"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Última Posición"
            android:id="@+id/textView8"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_alignLeft="@+id/spflotillas"
            android:layout_alignStart="@+id/spflotillas"
            android:layout_marginBottom="7dp"
            android:textColor="#615D5B"
            android:layout_marginLeft="7dp"
            android:textSize="15dp"
            android:textIsSelectable="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/imageView10"
            android:src="@drawable/visor_10"
            android:layout_alignTop="@+id/layout5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="59dp"
            android:layout_toLeftOf="@+id/spflotillas"
            android:layout_toStartOf="@+id/spflotillas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Último Viaje"
            android:id="@+id/textView10"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_alignLeft="@+id/spflotillas"
            android:layout_alignStart="@+id/spflotillas"
            android:layout_marginBottom="-39dp"
            android:textColor="#615D5B"
            android:layout_marginLeft="7dp"
            android:textSize="15dp"
            android:textIsSelectable="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/imageView12"
            android:src="@drawable/visor_12"
            android:layout_alignTop="@+id/layout5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="100dp"
            android:layout_toLeftOf="@+id/spflotillas"
            android:layout_toStartOf="@+id/spflotillas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viaje en Curso"
            android:id="@+id/textView12"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_alignLeft="@+id/spflotillas"
            android:layout_alignStart="@+id/spflotillas"
            android:layout_marginBottom="-82dp"
            android:textColor="#615D5B"
            android:layout_marginLeft="7dp"
            android:textSize="15dp"
            android:textIsSelectable="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/imageView13"
            android:src="@drawable/visor_14"
            android:layout_alignTop="@+id/layout5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="140dp"
            android:layout_toLeftOf="@+id/spflotillas"
            android:layout_toStartOf="@+id/spflotillas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Histórico"
            android:id="@+id/textView13"
            android:textColor="#615D5B"
            android:textSize="15dp"
            android:textIsSelectable="true"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/checkBox"
            android:layout_toStartOf="@+id/checkBox"
            android:layout_marginBottom="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viajes"
            android:id="@+id/textView13"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_alignLeft="@+id/spflotillas"
            android:layout_alignStart="@+id/spflotillas"
            android:layout_marginBottom="-124dp"
            android:textColor="#615D5B"
            android:layout_marginLeft="7dp"
            android:textSize="15dp"
            android:textIsSelectable="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:id="@+id/imageView21"
            android:src="@drawable/visor_16"
            android:layout_alignLeft="@+id/imageView13"
            android:layout_alignStart="@+id/imageView13"
            android:layout_toStartOf="@+id/textView13"
            android:layout_alignRight="@+id/imageView13"
            android:layout_alignEnd="@+id/imageView13"
            android:layout_below="@+id/imageView13"
            android:layout_alignParentBottom="true" />


    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
