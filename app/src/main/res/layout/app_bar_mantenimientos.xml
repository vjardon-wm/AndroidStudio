<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.diseo.hola.MantenimientosActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main2" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="50dp"
        tools:context="com.herprogramacion.botones.ActividadBotones">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:longClickable="true"
            android:layout_marginTop="15dp"
            android:text="MANTENIMIENTOS"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#C70000"
            android:textSize="24sp"
            android:textStyle="italic"
            android:typeface="sans"
            android:gravity="center"/>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/editText"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:background="@android:color/darker_gray" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:lines="1"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:hint="Buscar"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginTop="55dp"
            android:id="@+id/editText" />


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/editText"
            android:layout_alignRight="@+id/editText"
            android:layout_alignTop="@+id/editText"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_search_menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout3">

        </LinearLayout>

        <View
            android:layout_width="800dp"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText"
            android:layout_marginTop="16dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/linearLayout3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Button2"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_mant01"
                android:background="@drawable/btn_mant01_selected"
                android:layout_marginRight="5dp"
                android:text="Tiempo/Kilometraje"
                android:textAlignment="center"
                android:textColor="#ff8000"
                android:textAllCaps="false"
                android:textSize="10sp"
                android:typeface="sans"
                android:paddingBottom="3dp" />

            <Button
                android:id="@+id/imageButton3"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_mant03"
                android:background="@drawable/btn_mant02"
                android:layout_marginRight="5dp"
                android:text="Verificación"
                android:textAlignment="center"
                android:textColor="#95c020"
                android:textAllCaps="false"
                android:textSize="10sp"
                android:typeface="sans"
                android:paddingBottom="3dp"/>

            <Button
                android:id="@+id/Button4"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_mant02"
                android:background="@drawable/btn_mant03"
                android:layout_marginRight="5dp"
                android:text="Renovación"
                android:textAlignment="center"
                android:textColor="#bc0010"
                android:textAllCaps="false"
                android:textSize="10sp"
                android:typeface="sans"
                android:paddingBottom="3dp"/>

        </LinearLayout>

        <View
            android:layout_width="800dp"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText"
            android:layout_marginTop="130dp"
            android:background="@android:color/black"
            android:id="@+id/view" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/Button5"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_mant01"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="Cambio de llantas"
                android:textAlignment="center"
                android:textColor="#ff8000"
                android:textAllCaps="false"
                android:textSize="9sp"
                android:typeface="sans"
                android:maxLines="3"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"/>

            <Button
                android:id="@+id/Button6"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_mant01"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="Cambio de balatas"
                android:textAlignment="center"
                android:textColor="#ff8000"
                android:textAllCaps="false"
                android:textSize="9sp"
                android:typeface="sans"
                android:maxLines="3"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"/>

            <Button
                android:id="@+id/Button7"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_mant01"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="Cambio de bujías"
                android:textAlignment="center"
                android:textColor="#ff8000"
                android:textAllCaps="false"
                android:textSize="10sp"
                android:typeface="sans"
                android:maxLines="3"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"/>

            <Button
                android:id="@+id/Button8"
                android:layout_column="3"
                android:layout_row="0"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_mant01"
                android:text="Hojalatería y pintura"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:textColor="#ff8000"
                android:textAllCaps="false"
                android:textSize="9sp"
                android:typeface="sans"
                android:maxLines="3"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"/>

            <Button
                android:id="@+id/Button9"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_mant01"
                android:text="Hojalatería y pintura"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:textColor="#ff8000"
                android:textAllCaps="false"
                android:textSize="9dp"
                android:typeface="sans"
                android:maxLines="3"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"/>

            <Button
                android:id="@+id/Button10"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_mant02"
                android:text="Nov-Dic"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="#95c020"
                android:textAllCaps="false"
                android:textSize="9sp"
                android:typeface="sans"
                android:maxLines="3"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"/>

            <Button
                android:id="@+id/Button11"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_mant02"
                android:text="Ene-Feb"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="#95c020"
                android:textAllCaps="false"
                android:textSize="9sp"
                android:typeface="sans"
                android:maxLines="3"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"/>

            <Button
                android:id="@+id/Button12"
                android:layout_column="3"
                android:layout_row="1"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_mant02"
                android:text="Mar-Abr"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="#95c020"
                android:textAllCaps="false"
                android:textSize="9sp"
                android:typeface="sans"
                android:maxLines="3"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"/>

            <Button
                android:id="@+id/Button13"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_mant02"
                android:text="May-Jun"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="#95c020"
                android:textAllCaps="false"
                android:textSize="9sp"
                android:typeface="sans"
                android:maxLines="3"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"/>

            <Button
                android:id="@+id/Button14"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_mant02"
                android:text="Jul-Ago"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="#95c020"
                android:textAllCaps="false"
                android:textSize="9sp"
                android:typeface="sans"
                android:maxLines="3"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"/>

            <Button
                android:id="@+id/Button15"
                android:layout_column="2"
                android:layout_row="2"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_mant02"
                android:text="Sep-Oct"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="#95c020"
                android:textAllCaps="false"
                android:textSize="9sp"
                android:typeface="sans"
                android:maxLines="3"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"/>

            <Button
                android:id="@+id/Button16"
                android:layout_column="3"
                android:layout_row="2"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_mant03"
                android:text="Octubre 2017"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="#bc0010"
                android:textAllCaps="false"
                android:textSize="9sp"
                android:typeface="sans"
                android:maxLines="3"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"/>

            <Button
                android:id="@+id/Button17"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_mant03"
                android:text="Noviembre 2017"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColor="#bc0010"
                android:textAllCaps="false"
                android:textSize="9sp"
                android:typeface="sans"
                android:maxLines="3"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"/>

            <Button
                android:id="@+id/Button17"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_mant03"
                android:text="Diciembre 2017"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColor="#bc0010"
                android:textAllCaps="false"
                android:textSize="9sp"
                android:typeface="sans"
                android:maxLines="3"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"/>

            <Button
                android:id="@+id/Button17"
                android:layout_column="3"
                android:layout_row="4"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:background="@drawable/rounded_gray"
                android:text="Ver resultados"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="9sp"
                android:typeface="sans"
                android:maxLines="3"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"/>

        </GridLayout>


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
