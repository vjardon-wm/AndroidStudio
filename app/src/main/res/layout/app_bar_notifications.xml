<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diseo.hola.NotificationsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_notifications" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="50dp"
        tools:context="com.herprogramacion.botones.ActividadBotones">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:longClickable="true"
            android:layout_marginTop="15dp"
            android:text="NOTIFICACIONES"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#C70000"
            android:textSize="24sp"
            android:textStyle="italic"
            android:typeface="sans"
            android:gravity="center"/>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/editText"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:background="@android:color/darker_gray" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:lines="1"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:hint="Buscar"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginTop="55dp"
            android:id="@+id/editText" />


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/editText"
            android:layout_alignRight="@+id/editText"
            android:layout_alignTop="@+id/editText"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_search_menu" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:longClickable="true"
            android:layout_marginTop="105dp"
            android:drawableLeft="@drawable/ic_arrow_flag"
            android:text="Barenka Jardón"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#C70000"
            android:textSize="16sp"
            android:textStyle="italic"
            android:typeface="sans"
            android:gravity="left"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_notif_red"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="300dp"
            />

        <View
            android:layout_width="800dp"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText"
            android:layout_marginTop="30dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout5">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/warning"
                android:gravity="left"
                android:longClickable="true"
                android:paddingLeft="5dp"
                android:text="Posición Pruebas"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#95c11e"
                android:textSize="16sp"
                android:typeface="sans" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:drawableEnd="@drawable/ic_notif_green"
                android:drawablePadding="40dp"
                android:paddingLeft="5dp"
                android:text="11:06:52"
                android:textColor="#95c11e"
                android:textSize="16sp"
                android:typeface="sans" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout6">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:gravity="left"
                android:longClickable="true"
                android:paddingLeft="5dp"
                android:text="No atendidas:1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#C70000"
                android:textSize="16sp"
                android:typeface="sans" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="5dp"
                android:text="Atendidas:1"
                android:textColor="#95c11e"
                android:textSize="16sp"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout6">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/warning"
                android:gravity="left"
                android:longClickable="true"
                android:paddingLeft="5dp"
                android:text="2017-11-02 / 11:05:35"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#95c11e"
                android:textSize="16sp"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout6">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/warning"
                android:gravity="left"
                android:longClickable="true"
                android:paddingLeft="5dp"
                android:text="2017-11-02 / 11:05:56"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#95c11e"
                android:textSize="16sp"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout7">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/warning"
                android:gravity="left"
                android:longClickable="true"
                android:paddingLeft="5dp"
                android:text="2017-11-02 / 11:06:24"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#95c11e"
                android:textSize="16sp"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="240dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout6">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/warning"
                android:gravity="left"
                android:longClickable="true"
                android:paddingLeft="5dp"
                android:text="2017-11-02 / 11:11:11"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#95c11e"
                android:textSize="16sp"
                android:typeface="sans" />

        </LinearLayout>

        <View
            android:layout_width="800dp"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText"
            android:layout_marginTop="300dp"
            android:background="@android:color/black"
            android:id="@+id/view2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="400dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:gravity="left"
                android:longClickable="true"
                android:paddingLeft="5dp"
                android:text="Tiempo visible atendidas"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/black_overlay"
                android:textSize="16sp"
                android:typeface="sans" />


            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="7dp"
                android:textColor="#615D5B"
                android:layout_marginLeft="7dp"
                android:textSize="15sp"
                android:entries="@array/tiemponotif"
               />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="440dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:gravity="left"
                android:longClickable="true"
                android:paddingLeft="5dp"
                android:text="No atendidas en detalle"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/black_overlay"
                android:textSize="16sp"
                android:typeface="sans" />


            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="7dp"
                android:textColor="#615D5B"
                android:layout_marginLeft="7dp"
                android:textSize="15sp"
                android:entries="@array/unattended"
                />

        </LinearLayout>




    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
