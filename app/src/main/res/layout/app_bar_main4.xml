<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.diseo.hola.Main4Activity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main4" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_menu_plus" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.herprogramacion.botones.ActividadBotones">

        <Button
            android:id="@+id/button"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:text="Iniciar Prueba"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:typeface="sans"
            android:layout_centerHorizontal="true"
            android:background = "@drawable/radiobutton"
            android:layout_marginBottom="81dp"></Button>

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/imageView4"
            android:src="@drawable/hoja_03"
            android:layout_above="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Unidad:"
            android:textColor="#C70000"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="15dp"
            android:layout_above="@+id/imageView4"
            android:longClickable="true"
            android:typeface="sans"
            android:layout_toLeftOf="@+id/imageView4"
            android:layout_toStartOf="@+id/imageView4"
            android:id="@+id/textView2" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Unidad 1"
            android:textColor="#615D5B"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="15dp"
            android:longClickable="true"
            android:typeface="sans"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_marginLeft="54dp"
            android:layout_marginStart="54dp"
            android:id="@+id/textView3" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView2"
            android:src="@drawable/unidad_1"
            android:layout_above="@+id/textView2"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="8dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:id="@+id/imageView33"
            android:src="@drawable/drivericon_04"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_marginLeft="-20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#d8d8d8"
            android:layout_above="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="3dp"
            android:layout_height="4dp"
            android:layout_above="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/imageView2"
            android:background="#d8d8d8"
            android:id="@+id/linearLayout2"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Seleccionar Unidad"
            android:textColor="#615D5B"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="13dp"
            android:longClickable="true"
            android:typeface="sans"
            android:id="@+id/textView4"
            android:layout_above="@+id/textView2"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="-30dp"
            android:layout_toStartOf="@+id/linearLayout2"
            android:layout_toLeftOf="@+id/linearLayout2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Ejecutar Prueba"
            android:textColor="#615D5B"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="13dp"
            android:longClickable="true"
            android:typeface="sans"
            android:id="@+id/textView5"
            android:layout_marginLeft="32dp"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/linearLayout2"
            android:layout_toEndOf="@+id/linearLayout2"
            android:layout_marginStart="32dp" />

        <ImageSwitcher
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageSwitcher"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignEnd="@+id/imageView2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="4dp"
            android:layout_height="3dp"
            android:layout_above="@+id/imageView2"
            android:background="#d8d8d8"
            android:id="@+id/layout3"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:layout_margin="0dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="false"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="PRE-VERIFICACIÃ“N"
            android:textColor="#C70000"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24dp"
            android:longClickable="true"
            android:typeface="sans"
            android:textStyle="italic"
            android:id="@+id/textView6"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_above="@+id/layout3"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="6dp" />







    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
