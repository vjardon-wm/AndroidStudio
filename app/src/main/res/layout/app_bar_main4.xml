<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.diseo.hola.Main4Activity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main2" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_menu_plus" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.herprogramacion.botones.ActividadBotones">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="3dp"
            android:layout_height="4dp"
            android:layout_centerHorizontal="true"
            android:background="#d8d8d8"
            android:id="@+id/linearLayout2"
            android:layout_above="@+id/imageSwitcher"></LinearLayout>

        <ImageSwitcher
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageSwitcher"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="4dp"
            android:layout_height="3dp"
            android:background="#d8d8d8"
            android:id="@+id/layout3"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="false"
            android:layout_marginBottom="185dp"
            android:layout_above="@+id/imageSwitcher"
            android:orientation="horizontal" />
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:maxLength="30"
            android:lines="1"
            android:layout_alignTop="@+id/layout3"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:hint="Buscar"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginTop="1dp" />


        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton"
            android:src="@drawable/ic_search_menu"
            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/layout3"
            android:layout_alignRight="@+id/editText2"
            android:layout_alignEnd="@+id/editText2"
            android:layout_marginTop="5dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="DRIVER BEHAVIOR"
            android:textColor="#C70000"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24dp"
            android:longClickable="true"
            android:typeface="sans"
            android:textStyle="italic"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_marginTop="32dp"
            android:layout_alignParentEnd="false"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="EXCELENTE"
            android:textColor="#C70000"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="25dp"
            android:longClickable="true"
            android:typeface="sans"
            android:id="@+id/textView9"
            android:textAlignment="center"
            android:layout_below="@+id/imageButton"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:src="@drawable/star_06"
            android:layout_below="@+id/textView11"
            android:layout_toLeftOf="@+id/imageButton"
            android:layout_toStartOf="@+id/imageButton"
            android:layout_marginTop="-10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="B+"
            android:textColor="#f0ba10"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="36dp"
            android:longClickable="true"
            android:typeface="sans"
            android:id="@+id/textView11"
            android:textAlignment="center"
            android:textStyle="normal"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_marginTop="-10dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/imageView11"
            android:src="@drawable/rectangulo"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="RecomendaciÃ³n"
            android:textColor="#C70000"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp"
            android:longClickable="true"
            android:typeface="sans"
            android:id="@+id/textView14"
            android:textAlignment="center"
            android:layout_alignTop="@+id/imageView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="9.4"
            android:textColor="#fff"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="50dp"
            android:longClickable="true"
            android:typeface="sans"
            android:id="@+id/textView15"
            android:textAlignment="center"
            android:layout_below="@+id/imageSwitcher"
            android:textIsSelectable="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="-8dp"
            android:textStyle="normal" />


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
