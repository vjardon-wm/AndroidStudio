<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.diseo.hola.Main2Activity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main2" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_menu_plus" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.herprogramacion.botones.ActividadBotones">

        <Button
            android:id="@+id/button"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:text="Iniciar Prueba"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:typeface="sans"
            android:background = "@drawable/radiobutton"
            android:layout_below="@+id/imageView45"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="29dp"></Button>

        <ImageView
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:id="@+id/imageView45"
            android:src="@drawable/ic_menu_driver"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/spmes"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Periodo:"
            android:textColor="#C70000"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="15dp"
            android:longClickable="true"
            android:typeface="sans"
            android:id="@+id/textView2"
            android:layout_marginBottom="44dp"
            android:layout_above="@+id/imageSwitcher"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Spinner
            android:id="@+id/spmes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/mes"
            android:textColor="#615D5B"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/linearLayout2"
            android:layout_alignStart="@+id/linearLayout2" />
        <Spinner
            android:id="@+id/spsemana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/semana"
            android:textColor="#615D5B"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView2"
            android:src="@drawable/unidad_1"
            android:layout_above="@+id/textView2"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="70dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:id="@+id/imageView3"
            android:src="@drawable/verefi_1"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_toLeftOf="@+id/imageButton"
            android:layout_toStartOf="@+id/imageButton" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#d8d8d8"
            android:layout_above="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="3dp"
            android:layout_height="4dp"
            android:layout_above="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/imageView2"
            android:background="#d8d8d8"
            android:id="@+id/linearLayout2"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Seleccionar Unidad"
            android:textColor="#615D5B"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="13dp"
            android:longClickable="true"
            android:typeface="sans"
            android:id="@+id/textView4"
            android:layout_above="@+id/textView2"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="30dp"
            android:layout_toStartOf="@+id/linearLayout2"
            android:layout_toLeftOf="@+id/linearLayout2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Ejecutar Prueba"
            android:textColor="#615D5B"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="13dp"
            android:longClickable="true"
            android:typeface="sans"
            android:id="@+id/textView5"
            android:layout_marginLeft="32dp"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/linearLayout2"
            android:layout_toEndOf="@+id/linearLayout2"
            android:layout_marginStart="32dp" />

        <ImageSwitcher
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageSwitcher"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignEnd="@+id/imageView2" />


        <LinearLayout
            android:layout_width="4dp"
            android:layout_height="3dp"
            android:layout_above="@+id/imageView2"
            android:background="#d8d8d8"
            android:id="@+id/layout3"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="false"
            android:layout_marginBottom="45dp" />
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:maxLength="30"
            android:lines="1"
            android:layout_alignTop="@+id/layout3"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:hint="Buscar"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginTop="1dp" />


        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton"
            android:src="@drawable/ic_search_menu"
            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/layout3"
            android:layout_alignRight="@+id/editText2"
            android:layout_alignEnd="@+id/editText2"
            android:layout_marginTop="5dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="PRE-VERIFICACIÃ“N"
            android:textColor="#C70000"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24dp"
            android:longClickable="true"
            android:typeface="sans"
            android:textStyle="italic"
            android:id="@+id/textView6"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_above="@+id/layout3"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="6dp" />







    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
